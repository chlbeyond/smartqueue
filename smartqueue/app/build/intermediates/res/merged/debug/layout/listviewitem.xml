<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="A15"
        android:textColor="#16a4fa"
        android:textSize="@dimen/main_activity_listview_number" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_vertical" >
        <!--android:layout_height="@dimen/listview_item_height"-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_peplecount"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#67788d"
                android:textSize="@dimen/main_activity_listview_peoplecount" />

            <TextView
                android:id="@+id/textView_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textColor="#67788d"
                android:textSize="@dimen/main_activity_listview_peoplecount" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#b3b5b6"
                android:textSize="@dimen/main_activity_listview_peoplecount" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="|"
            android:textColor="#dadfe3"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/LinearLayout_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/tab_number_magin_left_right"
            android:paddingTop="@dimen/tab_number_magin_left_right" >

            <FrameLayout
                android:id="@+id/view_stardetail_star_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/callnumber" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/textView_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/tab_number_magin_left_right"
                    android:layout_marginLeft="@dimen/listview_item_magin_left"
                    android:layout_weight="1"
                    android:background="@drawable/listitem"
                    android:text="1"
                    android:textColor="#fff" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView_call_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="叫号"
                android:textColor="#67788d"
                android:textSize="@dimen/listview_item_call_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_meal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/textView_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tab_number_magin_left_right"
                android:background="@drawable/meal" />

            <TextView
                android:id="@+id/textView_meall_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tab_number_magin_left_right"
                android:text="就餐"
                android:textColor="#67788d"
                android:textSize="@dimen/listview_item_call_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_beused"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/textView_beused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tab_number_magin_left_right"
                android:background="@drawable/beused" />

            <TextView
                android:id="@+id/textView_beused_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="@dimen/tab_number_magin_left_right"
                android:text="过号"
                android:textColor="#67788d"
                android:textSize="@dimen/listview_item_call_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>