<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/RadioButtonPassWord1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/RadioButtonPassWord2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"  />

            <RadioButton
                android:id="@+id/RadioButtonPassWord3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"  />

            <RadioButton
                android:id="@+id/RadioButtonPassWord4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"  />

            <RadioButton
                android:id="@+id/RadioButtonPassWord5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/RadioButtonPassWord6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"  />

            <RadioButton
                android:id="@+id/RadioButtonPassWord7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/RadioButtonPassWord8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </TableRow>

        <EditText
            android:id="@+id/editTextRFID"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:ems="10"
            android:inputType="numberPassword" />

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/ButtonLoginDigit7"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/ButtonLoginDigit8"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"/>

            <Button
                android:id="@+id/ButtonLoginDigit9"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/ButtonLoginDigit4"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"/>

            <Button
                android:id="@+id/ButtonLoginDigit5"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/ButtonLoginDigit6"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/ButtonLoginDigit1"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/ButtonLoginDigit2"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/ButtonLoginDigit3"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow114"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ButtonLoginDelete"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/number_back_white" />

            <Button
                android:id="@+id/ButtonLoginDigit0"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"/>

            <ImageButton
                android:id="@+id/ButtonLoginCancel"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/number_delete_white" />
        </TableRow>
    </TableLayout>

</LinearLayout>